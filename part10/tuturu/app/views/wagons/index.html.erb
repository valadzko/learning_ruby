<p id="notice"><%= notice %></p>

<h1>Wagons</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wagons.each do |wagon| %>
      <tr>
        <td><%= wagon.class %></td>
        <td><%= link_to 'Show', train_wagon_path(@train, wagon) %></td>
        <td><%= link_to 'Edit', edit_train_wagon_path(@train, wagon) %></td>
        <td><%= link_to 'Destroy', train_wagon_path(@train, wagon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back to trains', trains_path %>
<br>
<%= link_to 'New Wagon', new_train_wagon_path(@train) %>
